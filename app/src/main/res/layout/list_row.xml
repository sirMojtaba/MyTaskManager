<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">


    <TextView
        android:id="@+id/text_view_row_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/text_view_row_icon"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_row_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_row_name"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/text_view_row_icon"
        android:text="TextView"
        android:layout_marginStart="8dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_view_row_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_row_description"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/text_view_row_icon"
        android:layout_marginStart="8dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/text_view_row_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/gradient_button"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/cardview_light_background"
        android:textSize="36sp"
        tools:text="Q" />

</RelativeLayout>