<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">


    <TextView
        android:id="@+id/text_view_row_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="-8dp"
        android:layout_toStartOf="@id/image_button_share"
        android:layout_toEndOf="@+id/text_view_row_icon"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_row_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_row_name"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="-8dp"
        android:layout_toStartOf="@id/image_button_share"
        android:layout_toEndOf="@+id/text_view_row_icon"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_view_row_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_row_description"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/text_view_row_icon"
        android:text="TextView" />

    <TextView
        android:id="@+id/text_view_row_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/background_row_icon"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/cardview_light_background"
        android:textSize="36sp"
        tools:text="Q" />

    <ImageButton
        android:id="@+id/image_button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        app:srcCompat="@drawable/ic_share" />

</RelativeLayout>