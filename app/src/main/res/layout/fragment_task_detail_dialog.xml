<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.fragment.TaskDetailDialogFragment" >

    <EditText
        android:id="@+id/edit_text_new_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:hint="title"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/edit_text_new_task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:hint="description"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/button_new_task_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="date" />

    <Button
        android:id="@+id/button_new_task_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="time" />
</LinearLayout>